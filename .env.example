# Application Configuration
VITE_APP_NAME=WorkFlow Management System
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_BASE_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Authentication
VITE_JWT_SECRET=your-super-secret-jwt-key-here
VITE_JWT_EXPIRES_IN=24h
VITE_REFRESH_TOKEN_EXPIRES_IN=7d

# Database (for backend)
DATABASE_URL=mongodb://localhost:27017/workflow-db
REDIS_URL=redis://localhost:6379

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,txt

# Security
VITE_ENABLE_2FA=true
VITE_SESSION_TIMEOUT=1800000

# Demo Mode
VITE_DEMO_MODE=false

# Development
VITE_DEBUG=false
VITE_LOG_LEVEL=info
